# Application Configuration
APP_NAME="Interviews.tv"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
API_URL=http://localhost:8000
APP_KEY=

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=interviews_tv
DB_USERNAME=root
DB_PASSWORD=

# Test Database
DB_TEST_HOST=127.0.0.1
DB_TEST_PORT=3306
DB_TEST_DATABASE=interviews_tv_test
DB_TEST_USERNAME=root
DB_TEST_PASSWORD=

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_TTL=60
JWT_REFRESH_TTL=20160
JWT_ALGO=HS256
JWT_BLACKLIST_ENABLED=true
JWT_BLACKLIST_GRACE_PERIOD=0

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=interviews-tv-media
AWS_URL=

# Email Configuration (SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@interviews.tv
MAIL_FROM_NAME="Interviews.tv"

# Redis Configuration (Optional)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# Security
BCRYPT_ROUNDS=12
SESSION_LIFETIME=7200

# File Upload Limits
MAX_FILE_SIZE=100MB
ALLOWED_VIDEO_TYPES=mp4,mov,avi,webm
ALLOWED_AUDIO_TYPES=mp3,wav,m4a,aac
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp

# Rate Limiting
API_RATE_LIMIT=60
AUTH_RATE_LIMIT=5

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_CHANNEL=single
LOG_LEVEL=debug

# Cache
CACHE_DRIVER=file
ROUTE_CACHE_ENABLED=false
ROUTE_CACHE_TTL=3600
